<!-- Edit task modal -->
<div class="modal fade" id="ID-<%= task._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit task</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/tasks/update/<%= task._id %>/?_method=PUT" method="post">
        <div class="modal-body">
          <div class="row">
            <div class="col-sm-9 form-floating d-flex mx-auto">
              <input class="form-control" type="text" name="modified_task" id="modified_task" placeholder="Edit task" value="<%= task.taskName %>" autocomplete="off"/>
              <label class="ps-4" for="modified_task">Edit task</label>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-9 form-floating d-flex mx-auto">
              <select class="form-select" id="task_status" name="task_status" aria-label="Task status selection">
                <% if (task.taskStatus == "brainstorming") { %>
                  <option selected value="brainstorming">Brainstorming</option>
                <% } else { %>
                  <option value="brainstorming">Brainstorming</option>
                <% } %>
                <% if (task.taskStatus == "in_progress") { %>
                  <option selected value="in_progress">In Progress</option>
                <% } else { %>
                  <option value="in_progress">In Progress</option>
                <% } %>
                <% if (task.taskStatus == "completed") { %>
                  <option selected value="completed">Completed</option>
                <% } else { %>
                  <option value="completed">Completed</option>
                <% } %>
              </select>
              <label class="ps-4" for="task_status">Task status</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-danger d-flex align-items-center me-auto ms-3" style="height: 38px;" href="/tasks/delete/<%= task._id %>/?_method=DELETE">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
          </a>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success me-3">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>