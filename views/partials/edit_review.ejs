<!-- Sign in and registration modal -->
<div class="modal fade" id="edit_review_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editReviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content"  style="height: calc(100% - 1rem);">
      <div class="modal-header">
        <h5 class="modal-title" id="editReviewModalLabel">Movie Review</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h2 class="my-4 ms-1">Edit your review</h2>
        <form action="" method="post" id="edit-form">
          <!-- Movie title input -->
          <div class="form-floating mx-3">
            <input type="text" id="edit_movieTitle" name="movieTitle" class="form-control" placeholder="Movie title" autofocus autocomplete="off" required />
            <label for="movieTitle">Movie title</label>
          </div>
          <!-- Review title input -->
          <div class="form-floating mx-3 my-3">
            <input type="text" id="edit_reviewTitle" name="reviewTitle" class="form-control" placeholder="Review title" autocomplete="off" required />
            <label for="reviewTitle">Review title</label>
          </div>
          <!-- Review body input -->
          <div class="form-floating mx-3 mb-4">
            <textarea style="height: 100px" type="text" id="edit_reviewContent" name="reviewContent" class="form-control" placeholder="Your review" autocomplete="off" required></textarea>
            <label for="reviewContent">Your review</label>
          </div>
          
          <div class="form-floating mx-3 mb-4 d-flex">
            <span class="align-self-center ms-3 pb-1 me-2">Star rating:</span>
            <div>
              <input type="radio" class="btn-check" name="reviewRating" id="edit-check-1" value="1" autocomplete="off">
              <label class="btn" for="check-1">
                <i class="far fa-star" id="edit_stars-1"></i>
              </label>
              <input type="radio" class="btn-check" name="reviewRating" id="edit-check-2" value="2" autocomplete="off">
              <label class="btn" for="check-2">
                <i class="far fa-star" id="edit_stars-2"></i>
              </label>
              <input type="radio" class="btn-check" name="reviewRating" id="edit-check-3" value="3" autocomplete="off">
              <label class="btn" for="check-3">
                <i class="far fa-star" id="edit_stars-3"></i>
              </label>
              <input type="radio" class="btn-check" name="reviewRating" id="edit-check-4" value="4" autocomplete="off">
              <label class="btn" for="check-4">
                <i class="far fa-star" id="edit_stars-4"></i>
              </label>
              <input type="radio" class="btn-check" name="reviewRating" id="edit-check-5" value="5" autocomplete="off">
              <label class="btn" for="check-5">
                <i class="far fa-star" id="edit_stars-5"></i>
              </label>
            </div>
          </div>

          <!-- Edit button -->
          <div class="pt-4 modal-footer d-flex justify-content-center">
            <button class="px-5 py-2 btn btn-outline-success shadow" type="submit">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
